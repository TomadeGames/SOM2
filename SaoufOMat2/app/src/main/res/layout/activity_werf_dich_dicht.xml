<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".activity.miniGames.werfDichDicht.WerfDichDichtActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/backgroudImage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/tepich"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/namePanel">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/nameBackground"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/popup"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/nameText"
            android:layout_alignLeft="@+id/nameBackground"
            android:layout_alignRight="@+id/nameBackground"
            android:gravity="center"
            android:textColor="#000000" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="123dp"
        android:id="@+id/glassesPanel"
        android:layout_below="@+id/namePanel"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/glas0Image"
            android:layout_margin="15dp"
            android:src="@drawable/schnapsglas_1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/glas1Image"
            android:layout_margin="15dp"
            android:src="@drawable/schnapsglas_1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/glas2Image"
            android:layout_margin="15dp"
            android:src="@drawable/schnapsglas_1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/glas3Image"
            android:layout_margin="15dp"
            android:src="@drawable/schnapsglas_1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/glas4Image"
            android:layout_margin="15dp"
            android:src="@drawable/schnapsglas_1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/glas5Image"
            android:layout_margin="15dp"
            android:src="@drawable/schnapsglas_1" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/dicePanel"
        android:layout_below="@+id/glassesPanel"
        android:gravity="center"
        android:layout_marginBottom="65dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/diceImage"
            android:src="@drawable/dice1"
            android:scaleType="fitXY" />

    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/popupImage"
        android:layout_gravity="center_vertical"
        android:layout_alignTop="@+id/dicePanel"
        android:layout_alignLeft="@+id/dicePanel"
        android:layout_alignBottom="@+id/dicePanel"
        android:layout_alignRight="@+id/dicePanel"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="140dp"
        android:src="@drawable/popup"
        android:scaleType="fitXY"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tippen zum WÃ¼rfeln"
        android:id="@+id/popupText"
        android:layout_alignTop="@+id/popupImage"
        android:layout_alignLeft="@+id/popupImage"
        android:layout_alignBottom="@+id/popupImage"
        android:layout_alignRight="@+id/popupImage"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_margin="5dp" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:background="#00ffffff"
        android:scaleType="center"
        android:src="@drawable/no_button" />

    <TextView
        android:id="@+id/backText"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/backButton"
        android:layout_alignLeft="@+id/backButton"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignRight="@+id/backButton"
        android:layout_alignTop="@+id/backButton"
        android:gravity="center"
        android:text="@string/zur_ck"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/tutorialButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="#00ffffff"
        android:scaleType="fitXY"
        android:src="@drawable/help" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tutorialPanel"
        android:gravity="center"
        android:layout_margin="15dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tutorialImage"
            android:src="@drawable/popup"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/wer_dich_dicht_tutorial"
            android:id="@+id/tutorialText"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="#000000" />
    </RelativeLayout>

</RelativeLayout>
