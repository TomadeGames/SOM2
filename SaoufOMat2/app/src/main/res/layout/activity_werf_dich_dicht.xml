<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                tools:context=".activity.miniGame.werfDichDicht.WerfDichDichtActivity">

    <ImageView
        android:id="@+id/backgroudImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/tepich"/>

    <RelativeLayout
        android:id="@+id/namePanel"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/nameBackground"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/popup"/>

        <TextView
            android:id="@+id/nameText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignLeft="@+id/nameBackground"
            android:layout_alignRight="@+id/nameBackground"
            android:gravity="center"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/glassesPanel"
        android:layout_width="fill_parent"
        android:layout_height="123dp"
        android:layout_below="@+id/namePanel"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textAppearance="@android:style/TextAppearance.Large"/>

            <ImageView
                android:id="@+id/glas0Image"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/schnapsglas_1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:textAppearance="@android:style/TextAppearance.Large"/>

            <ImageView
                android:id="@+id/glas1Image"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/schnapsglas_1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3"
                android:textAppearance="@android:style/TextAppearance.Large"/>

            <ImageView
                android:id="@+id/glas2Image"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/schnapsglas_1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4"
                android:textAppearance="@android:style/TextAppearance.Large"/>

            <ImageView
                android:id="@+id/glas3Image"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/schnapsglas_1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5"
                android:textAppearance="@android:style/TextAppearance.Large"/>

            <ImageView
                android:id="@+id/glas4Image"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/schnapsglas_1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/number0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="6"
                android:textAppearance="@android:style/TextAppearance.Large"/>

            <ImageView
                android:id="@+id/glas5Image"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/schnapsglas_1"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/dicePanel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/glassesPanel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/diceImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@drawable/dice1"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/popupImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/dicePanel"
        android:layout_alignLeft="@+id/dicePanel"
        android:layout_alignRight="@+id/dicePanel"
        android:layout_alignTop="@+id/dicePanel"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="140dp"
        android:scaleType="fitXY"
        android:src="@drawable/popup"/>

    <TextView
        android:id="@+id/popupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/popupImage"
        android:layout_alignLeft="@+id/popupImage"
        android:layout_alignRight="@+id/popupImage"
        android:layout_alignTop="@+id/popupImage"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="Tippen zum WÃ¼rfeln"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"/>

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:background="#00ffffff"
        android:scaleType="center"
        android:src="@drawable/no_button"/>

    <TextView
        android:id="@+id/backText"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/backButton"
        android:layout_alignLeft="@+id/backButton"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignRight="@+id/backButton"
        android:layout_alignTop="@+id/backButton"
        android:gravity="center"
        android:text="@string/button.back"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"/>

    <ImageButton
        android:id="@+id/tutorialButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="#00ffffff"
        android:scaleType="fitXY"
        android:src="@drawable/help"/>

    <RelativeLayout
        android:id="@+id/tutorialPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/tutorialImage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/popup"/>

        <TextView
            android:id="@+id/tutorialText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/minigame_werf_dich_dicht_tutorial"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/turnCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:text="TextView"
        android:textColor="#ffffff"/>

</RelativeLayout>
