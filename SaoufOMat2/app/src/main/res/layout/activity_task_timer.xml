<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A5AA0"
    tools:context="com.tomade.saufomat.activity.mainGame.TaskTimerActivity">

    <RelativeLayout
        android:id="@+id/timerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/submitButtonLayout"
        android:layout_marginBottom="15dp">

        <com.tomade.saufomat.view.SaufOMatTextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textSize="30sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/submitButtonLayout"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp">

        <ImageButton
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:contentDescription="BestÃ¤tigung"
            android:scaleType="fitXY"
            android:src="@drawable/maingame_submit_button"/>

        <com.tomade.saufomat.view.SaufOMatTextView
            android:id="@+id/submitButtonText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Fertig!"
            android:textColor="#000000"
            android:textSize="22sp"
            />
    </RelativeLayout>

</RelativeLayout>
