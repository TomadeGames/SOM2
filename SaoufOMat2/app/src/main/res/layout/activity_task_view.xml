<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:contextClickable="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backgroundImage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        android:src="@drawable/main_game_background" />

    <ImageButton
        android:id="@+id/yesButton"
        android:src="@drawable/check_button"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:layout_height="60dp"
        android:layout_width="200dp"
        android:background="#00ffffff"
        android:layout_alignBottom="@+id/backgroundImage"
        android:layout_alignRight="@+id/backgroundImage"
        android:layout_alignEnd="@+id/backgroundImage" />

    <ImageButton
        android:id="@+id/noButton"
        android:src="@drawable/no_button"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:layout_height="60dp"
        android:layout_width="200dp"
        android:background="#00ffffff"
        android:layout_alignBottom="@+id/backgroundImage"
        android:layout_toLeftOf="@+id/yesButton"
        android:layout_toStartOf="@+id/yesButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/costText"
        android:layout_alignTop="@+id/noButton"
        android:layout_alignLeft="@+id/noButton"
        android:layout_alignStart="@+id/noButton"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/taskText"
        android:layout_marginBottom="132dp"
        android:layout_above="@+id/yesButton"
        android:layout_toRightOf="@+id/costText"
        android:layout_toEndOf="@+id/costText"
        android:textColor="#000000" />

</RelativeLayout>
