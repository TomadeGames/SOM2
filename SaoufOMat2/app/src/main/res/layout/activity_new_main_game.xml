<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.mainGame.MainGameActivity">

    <ImageView
        android:id="@+id/Background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/slot_machine_background"
        android:contentDescription="Background Image"/>

    <RelativeLayout
        android:id="@+id/GameIcons"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <ImageView
        android:id="@+id/GameIconLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="185dp"
        android:layout_marginStart="185dp"
        android:layout_marginTop="50dp"
        android:contentDescription="left Icon"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:src="@drawable/beer_icon"/>

    <ImageView
        android:id="@+id/GameIconMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/GameIconLeft"
        android:layout_alignStart="@id/GameIconLeft"
        android:layout_alignTop="@+id/GameIconLeft"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:contentDescription="middle Icon"
        android:scaleType="fitXY"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:src="@drawable/cocktail_icon"/>

    <ImageView
        android:id="@+id/GameIconRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/GameIconMiddle"
        android:layout_alignStart="@id/GameIconLeft"
        android:layout_alignTop="@+id/GameIconLeft"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:contentDescription="right Icon"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:src="@drawable/shot_icon"/>

    <ImageView
        android:id="@+id/SlotMachine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:contentDescription="SlotMachine"
        android:scaleType="fitXY"
        android:src="@drawable/maingame_saufomo_front"/>

    <ImageButton
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="45dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:background="#00000000"
        android:contentDescription="start button"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:src="@drawable/start_button"/>

    <ImageView
        android:id="@+id/saufOMeterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SaufOMeter"
        android:layout_alignRight="@+id/SaufOMeter"
        android:layout_above="@id/SaufOMeter"
        android:layout_marginLeft="-15dp"
        android:layout_marginRight="-15dp"
        android:layout_marginBottom="-100dp"
        android:src="@drawable/saufometer_name"
        android:contentDescription="SaufOMeter label"/>

    <ImageView
        android:id="@+id/SaufOMeter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/saufometer0"
        android:contentDescription="SaufOMeter"/>

    <RelativeLayout
        android:id="@+id/playerNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/playerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="PlayerName"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </RelativeLayout>

</RelativeLayout>
