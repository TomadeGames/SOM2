<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tomade.saufomat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:resizeableActivity="false"
        android:screenOrientation="sensorLandscape"
        android:supportsRtl="true"
        android:theme="@style/noAnimTheme">
        <activity
            android:name=".activity.StartActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainMenuActivity"
            android:screenOrientation="sensorLandscape">
        </activity>
        <activity
            android:name=".activity.CreatePlayerActivity"
            android:screenOrientation="sensorLandscape">
        </activity>
        <activity
            android:name=".activity.ChooseMiniGameActivity"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".activity.mainGame.TaskViewActivity"
            android:label="@string/title_activity_task_view"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".activity.miniGame.busfahren.BusfahrenActivity"
            android:label="@string/minigame.busfahren.caption"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".activity.miniGame.ichHabNochNie.IchHabNochNieActivity"
            android:label="@string/minigame.ich_hab_noch_nie.caption"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".activity.miniGame.augensaufen.AugensaufenActivity"
            android:label="@string/minigame.augensaufen.caption"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".activity.miniGame.werfDichDicht.WerfDichDichtActivity"
            android:label="@string/minigame.werf_dich_dicht.caption"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".activity.miniGame.kistenStapeln.KistenStapelnActivity"
            android:label="@string/minigame.kisten_stapeln.caption"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.miniGame.kings.KingsActivity"
            android:label="@string/minigame.kings.caption"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".activity.miniGame.bierrutsche.BierrutscheActivity"
            android:label="@string/minigame.bierrutsche.caption"
            android:screenOrientation="sensorLandscape"/>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity
            android:name=".activity.mainGame.MainGameActivity"
            android:screenOrientation="sensorLandscape">
        </activity>
        <activity
            android:name=".activity.miniGame.TutorialDialog"
            android:label="@string/dialog.tutorial.caption"
            android:theme="@style/Theme.TutorialDialog"/>
        <activity
            android:name=".activity.mainGame.TaskTimerActivity"
            android:screenOrientation="sensorLandscape"/>
    </application>

</manifest>