<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.tomade.saufomat2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        <activity android:name=".activity.MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.CreatePlayerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ChooseMiniGameActivity" />
        <activity
            android:name=".activity.mainGame.MainGameActivity"
            android:label="@string/title_activity_main_game"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.mainGame.TaskViewActivity"
            android:label="@string/title_activity_task_view"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.miniGames.busfahren.BusfahrenActivity"
            android:label="@string/title_activity_busfahren"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.miniGames.IchHabNochNieActivity"
            android:label="@string/title_activity_ich_hab_noch_nie"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.miniGames.augensaufen.AugensaufenActivity"
            android:label="@string/title_activity_augensaufen"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.miniGames.werfDichDicht.WerfDichDichtActivity"
            android:label="@string/title_activity_werf_dich_dicht"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.miniGames.KistenStapelnActivity"
            android:label="@string/title_activity_kisten_stapeln"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.miniGames.kings.KingsActivity"
            android:label="@string/title_activity_kings" />
        <activity
            android:name=".activity.miniGames.bierrutsche.Bierrutsche"
            android:label="@string/title_activity_bierrutsche"></activity>
    </application>

</manifest>