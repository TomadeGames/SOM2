<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="de.tomade.saufomat2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        <activity
            android:nameId=".activity.MainMenuActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:nameId="android.intent.action.MAIN"/>

                <category android:nameId="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:nameId=".activity.CreatePlayerActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:nameId="android.intent.action.MAIN"/>

                <category android:nameId="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:nameId=".activity.ChooseMiniGameActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:nameId=".activity.mainGame.MainGameActivity"
            android:label="@string/title_activity_main_game"
            android:screenOrientation="landscape"/>
        <activity
            android:nameId=".activity.mainGame.TaskViewActivity"
            android:label="@string/title_activity_task_view"
            android:screenOrientation="landscape"/>
        <activity
            android:nameId=".activity.miniGames.busfahren.BusfahrenActivity"
            android:label="@string/minigame.busfahren.caption"
            android:screenOrientation="landscape"/>
        <activity
            android:nameId=".activity.miniGames.ichHabNochNie.IchHabNochNieActivity"
            android:label="@string/minigame.ich_hab_noch_nie.caption"
            android:screenOrientation="landscape"/>
        <activity
            android:nameId=".activity.miniGames.augensaufen.AugensaufenActivity"
            android:label="@string/minigame.augensaufen.caption"
            android:screenOrientation="landscape"/>
        <activity
            android:nameId=".activity.miniGames.werfDichDicht.WerfDichDichtActivity"
            android:label="@string/minigame.werf_dich_dicht.caption"
            android:screenOrientation="landscape"/>
        <activity
            android:nameId=".activity.miniGames.kistenStapeln.KistenStapelnActivity"
            android:label="@string/minigame.kisten_stapeln.caption"
            android:screenOrientation="portrait"/>
        <activity
            android:nameId=".activity.miniGames.kings.KingsActivity"
            android:label="@string/minigame.kings.caption"
            android:screenOrientation="portrait"/>
        <activity
            android:nameId=".activity.miniGames.bierrutsche.BierrutscheActivity"
            android:label="@string/minigame.bierrutsche.caption"
            android:screenOrientation="portrait"/>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:nameId="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity
            android:nameId=".activity.miniGames.biergeballer.BiergeballerActivity"
            android:label="@string/minigame.biergeballer.caption"/>
    </application>

</manifest>